    <ul class="navigation">
      <li><a href="http://ycombinator.com/"><%= image_tag "y18.gif", :class => "logo"  %></a></li>
      <li><a href="#"><strong>Hacker News</strong></a></li>
      <li><a href="#">new</a></li>
      <li><a href="#">comments</a></li>
      <li><a href="#">ask</a></li>
      <li><a href="#">jobs</a></li>
      <li><a href="#">submit</a></li>
      <li class="login"><a href="#">login</a></li>
    </ul>
  </div>

  <div class="page">
    <%= yield %>
  </div>
  <div class="footer-container"> 
    <footer>
      <hr class="horizontal-line" color="#ff6600" size="2px">
      <div>
      <ul class="footer-nav">
        <li><a href="#">Lists</a></li>
        <li><a href="#">RSS</a></li>
        <li><a href="#">Bookmarklet</a></li>
